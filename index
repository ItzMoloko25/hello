  <script>
    function updateClock(){
      const nowLocal = new Date();
      const utcTimestamp = nowLocal.getTime() + (nowLocal.getTimezoneOffset() * 60000);
      // add 3 hours offset
      const offsetMs = 3 * 60 * 60 * 1000;
      const tzDate = new Date(utcTimestamp + offsetMs);

      const timeStr = tzDate.toLocaleTimeString('ru-RU', {hour:'2-digit',minute:'2-digit',second:'2-digit',hour12:false});
      const dateStr = tzDate.toLocaleDateString('ru-RU', {weekday:'long', year:'numeric', month:'long', day:'numeric'});

      document.getElementById('time').textContent = timeStr;
      document.getElementById('date').textContent = dateStr.charAt(0).toUpperCase() + dateStr.slice(1);
    }

    updateClock();
    setInterval(updateClock, 250);
  </script>
